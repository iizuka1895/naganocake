<div class="container">
  <h2 class="mt-5 text-center">商品詳細</h2>
    <div class="row align-items-center m-5">
      <div class="col-lg text-center mb-5">
        <%= image_tag @item.image, size: "300x250" %>
      </div>
      <div class="col-lg">
        <table class="table">
          <tr>
            <th>商品名</th>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <th>税込価格<br>
            （税抜価格）
            </th>
            <td><%= @item.add_tax_price.to_s(:delited) %>(<%= @item.price %>)円</td>
          </tr>
        </table>
        <% if admin_signed_in? %>
        <div class="d-flex justify-content-around">
          <%= link_to '編集する', edit_admin_item_path(@item.id), class: "btn btn-success" %>
        </div>
        <% end %>
      </div>
    </div>
</div>