<div class="container">
  <h2 class="text-center my-5">商品編集</h2>
  <div class="row">
    <div class="col-8 offset-2 mb-5">
      <%= form_with model: @item, url: admin_items_path, local: true do |f| %>
      <table>
        <tr>
          <div class="form-group">
            <%= f.label :商品画像, class: "form_label" %>
            <%= f.file_field :image, class: "mb-3 ml-3" %>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <%= f.label :商品名, class: "form_label" %>
            <%= f.text_field :name, class: "form-control mb-3" %>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <%= f.label :商品説明, class: "form_label" %>
            <%= f.text_area :introduction, size: "50x5", class: "form-control form-control-lg mb-3" %>
          </div>
        </tr>
        <tr>
        <div class="form-group">
          <%= f.label :税抜価格, class: "form_label" %>
          <%= f.text_field :price %>円
        </div>
        </tr>
        <tr>
          <div class="form-action d-flex justify-content-around">
            <%= f.submit "変更を保存", class: "btn btn-success" %>
          </div>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>