<div class="container">
  <h2 class="my-5">会員一覧</h2>
  <div class="row d-flex justify-content-center">
    <div class="col-lg">
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td class="info col-xs-1">
                <%= customer.id %>
              </td>
              <td>
                <%= link_to "/admin/customers/#{customer.id}" do %>
                  <%= customer.last_name %>
                  <%= customer.first_name %>
                <% end %>
              </td>
              <td>
                <%= customer.email %>
              </td>
              <td>
                <% if customer.is_active == false %>
                  <p class="text-secondary">無効</p>
                <% else %>
                  <p class="text-success">有効</p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="d-flex justify-content-center"><%= paginate(@customers)%></div>
</div>