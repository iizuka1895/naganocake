<div class="container">
  <h2 class="my-5">会員情報編集</h2>
  <div class="row">
    <%= form_with model:@customer,url:public_customers_path, method: :patch, local: true do |f|%>
    
    <div class="col-xs-12">
      <div class="form-group row">
        <%= f.label :"氏名", class: "col-4" %>
        <%= f.text_field :first_name, class: "col-3" %>
        <%= f.text_field :last_name, class: "col-3 ml-3"%>
      </div>

      <div class="form-group row">
        <%= f.label :"フリガナ", class: "col-4" %>
        <%= f.text_field :first_name_kana, class: "col-3"  %>
        <%= f.text_field :last_name_kana, class: "col-3 ml-3" %>
      </div>

      <div class="form-group row">
        <%= f.label :"郵便番号", class: "col-4" %>
        <%= f.text_field :postal_code, class: "col-4" %>
      </div>
      
      <div class="form-group row">
        <%= f.label :"住所", class: "col-4" %>
        <%= f.text_field :adress, class: "col-8" %>
      </div>
      
      <div class="form-group row">
        <%= f.label :"電話番号", class: "col-4" %>
        <%= f.text_field :telephone_number, class: "col-4" %>
      </div>

      <div class="form-group row">
        <%= f.label :"メールアドレス", class: "col-4" %>
        <%= f.email_field :email %>
      </div>
      
      <div class="form-group row">
        <%= f.submit "編集内容を保存する", class: "col-4" %>
        <%= link_to "退会する", check_public_customers_path, class: "btn btn-danger ml-5" %>
      </div>
      <% end %>
      </div>      
    </div>
  </div>
</div>