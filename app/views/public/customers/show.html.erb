<div>
  <h2>マイページ</h2>
  <div>
    <p>登録者情報</p>
    <p><%= link_to "編集する",edit_public_customer_path %></p>
    <table>
      <tbody>
        <tr>
          <td>氏名</td>
          <td><%= @customer.last_name %></td>
          <td><%= @customer.first_name %></td>
        </tr>
        <tr>
          <td>カナ</td>
          <td><%= @customer.last_name_kana %></td>
          <td><%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.adress %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>        
      </tbody>
    </table>
    <div>
      <p>注文履歴</p>
      <p><%= link_to "一覧を見る", public_orders_path %></p>
    </div>
    
  </div>
</div>