<div class="container my-5">
  <div class="row">
    <div class="col-6 offset-3">
      <h3 class="text-center">ログイン</h3>
        <h6 class="my-3 text-center">会員の方はこちらからログイン</h6>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :"メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :"パスワード" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actionsmy-3 text-center">
            <%= f.submit "ログイン", class: "btn btn-primary" %>
          </div>
          <% end %>
          
          <br>
          <div>
            <h6 class="text-center">会員登録がお済でない方</h6>
              <p class="text-center"><%= link_to "こちら", new_customer_registration_path %>から新規登録を行ってください。</p>
          </div>
    </div>
  </div>
</div>
