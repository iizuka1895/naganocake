<div class="container">
  <h2 class="font-weight-bold my-5">注文情報入力</h2>
    <div class="row">
      <div class="col-xs-12">
        <% if current_customer.cart_items.present? %>
        <div class="col-xs-offset-1">
          <%= form_with model: @order, url: confirm_public_orders_path, method: :post, local: true do |f| %>

            <h5 class="col-xs-3 font-weight-bold mb-3">支払方法</h5>
              <div class="col-xs-10">
                <%= f.radio_button :method_of_payment, "credit_card", checked: true %>
                <%= f.label :"クレジットカード" %>
              </div>
              <div class="col-xs-10">
                <%= f.radio_button :method_of_payment, "transfer" %>
                <%= f.label :"銀行振込"%>
              </div>

            <h5 class="col-xs-3 font-weight-bold mb-3">お届け先</h5>
              <div class="col-xs-10">
                <%= f.radio_button :my_adress, "1", checked: true %>
                <%= f.label :"ご自身の住所"%><br>
                <%= "〒#{current_customer.postal_code} #{current_customer.adress}"%><br>
                <%= "#{current_customer.last_name} #{current_customer.first_name}"%>
              </div>

              <div class="col-xs-10 mt-5">
                <%= f.radio_button :my_adress, :"2" %>
                <%= f.label :"新しいお届け先" %>
                <div class="col-xs-12 form-group">
                  <%= f.label :"郵便番号（ハイフンなし）", class: "col-sm-7 form-control-static" %>
                  <%= f.text_field :post_code, class: "col-sm-3 form-control-static", placeholder: '0000000' %>
                </div>
                <div class="col-xs-12 form-group">
                  <%= f.label :"住所", class: "col-sm-4 form-control-static" %>
                  <%= f.text_field :adress, class: "col-sm-7 form-control-static", placeholder: '東京都渋谷区代々木神園町0-0' %>
                </div>
                <div class="col-xs-12 form-group">
                  <%= f.label :"宛名", class: "col-sm-7 form-control-static" %>
                  <%= f.text_field :name, class: "col-sm-3 form-control-static", placeholder: '令和道子' %>
                </div>
              </div>

              <div class="col-xs-8 d-flex justify-content-center">
                <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
              </div>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
</div>