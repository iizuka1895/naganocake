<br>
<div class="container">
  <div class="row">
    <div class="col-sm-12 px-sm-0">
      <h1>商品一覧</h1><h4>（全<%= @all_items.count %>件）</h4>
    </div>
  </div>
  <div class="row mt-3 mb-3 text-md left">
    <% @items.each do |item| %>
      <div class="col-xs-10 col-sm-10 col-md-6 col-lg-3">
        <div class="card w-100 bg-transparent border-0" style="width: 18rem;">
          <%= link_to public_item_path(item.id) do %>
            <p class="img-wrap"><%= image_tag item.image, size: "180x130" %></p>
          <% end %>
          <div class="card-body">
            <p class="item-details item-name card-text"><%= item.name %></p>
            <p class="item-details card-text">¥<%= item.add_tax_price.to_s(:delited) %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
    <%= paginate(@items) %>
</div>