<h3>新規会員登録</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
  <table>
    <tbody>
      <tr>
        <th>名前</th>
        <td>（姓）</td>
        <td><%= f.text_field :last_name, autofocus: true %></td>
        <td>（名）</td>
        <td><%= f.text_field :first_name, autofocus: true %></td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td>（セイ）</td>
        <td><%= f.text_field :last_name_kana, autofocus: true %></td>
        <td>（メイ）</td>
        <td><%= f.text_field :first_name_kana, autofocus: true %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>
      <tr>
        <th>郵便番号（ハイフンなし）</th>
        <td></td>
        <td><%= f.text_field :postal_code, autofocus: true %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td></td>
        <td><%= f.text_field :adress, autofocus: true %></td>
      </tr>
      <tr>
        <th>電話番号（ハイフンなし）</th>
        <td></td>
        <td><%= f.text_field :telephone_number, autofocus: true %></td>
      </tr>
      <tr>
        <th>パスワード（6文字以上）</th>
        <td></td>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <th>パスワード（確認用）</th>
        <td></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>
  </tbody>
</table>
<br>
<br>
  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>
<div>
  <h3>既に登録済みの方</h3>
  <div>
    <span><%= link_to 'こちら', new_customer_session_path %>からログインしてください。</span>
  </div>
</div>

